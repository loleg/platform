    block head
      //- additional scripts and styles

  body
    block nav
      .navbar.navbar-expand-lg.fixed-top.navbar-dark.bg-primary
        .container
          a.navbar-brand(href='/')
            img(src='/img/SmartUse-Logo-White.png' width='150px' alt='Smart Use Logo' title='Home')
